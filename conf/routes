# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the input list
GET     /                           controllers.Application.index

# inputs list (look at the default values for pagination parameters)
GET     /inputs                  controllers.Application.list(p:Int ?= 0, s:Int ?= 2, f ?= "")

# Add input
GET     /inputs/new              controllers.Application.create
POST    /inputs                  controllers.Application.save

# Edit existing input
GET     /inputs/:id              controllers.Application.edit(id:Long)
POST    /inputs/:id              controllers.Application.update(id:Long)

# Delete a input
GET     /inputs/:id/delete       controllers.Application.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

